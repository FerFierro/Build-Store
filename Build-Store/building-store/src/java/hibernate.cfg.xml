<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/constructora?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.connection.password">mysql</property>
    <mapping resource="Pojos/Cliente.hbm.xml"/>
    <mapping resource="Pojos/Comentario.hbm.xml"/>
    <mapping resource="Pojos/Servicio.hbm.xml"/>
    <mapping resource="Pojos/ServicioContratado.hbm.xml"/>
    <mapping resource="Pojos/TipoProyecto.hbm.xml"/>
    <mapping resource="Pojos/Proyecto.hbm.xml"/>
    <mapping resource="Pojos/ConstructoraTipoProyecto.hbm.xml"/>
    <mapping resource="Pojos/ServicioPropuesto.hbm.xml"/>
    <mapping resource="Pojos/Constructora.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
